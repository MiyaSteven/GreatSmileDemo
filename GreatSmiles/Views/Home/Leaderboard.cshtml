@model GreatSmilesWrapper

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-10">
                <h1>Leaderboards!</h1>
            </div>
            <div class="col-sm-2">
                <a href="/dashboard">Dashboard</a>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 offset-sm-1">
                <table class="table">
                    <thead>
                        <th>Competition:</th>
                        <th>Description:</th>
                        <th>Rewards:</th>
                        <th>Current Rankings:</th>
                    </thead>
                    <tbody>
                        @foreach(Competition Competition in Model.AllCompetitions)
                        {
                        <tr>
                                <td>@Competition.CompetitionTitle</td>
                                <td>@Competition.Description</td>
                                <td>Golden PhotoFrame</td>
                                @* <ol>
                                    @foreach(User entrant in Competition.AllEntrants)
                                    {
                                        <li>@entrant.FirstName</li>
                                    }
                                </ol> *@
                            <td>
                                <ol>
                                    @foreach(Entrant Entrant in Model.AllEntrants)
                                    {
                                        <li>@Entrant.EntrantName</li>
                                    }
                                </ol>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <a href="/competitions/entrants/new" class="col-sm-4 offset-sm-8">Create an Entrant</a>
        </div>   
    </div>
</body>
</html>